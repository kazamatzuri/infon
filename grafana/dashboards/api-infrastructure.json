{
  "uid": "infon-api-infra",
  "title": "Infon - API & Infrastructure",
  "tags": ["infon"],
  "timezone": "browser",
  "refresh": "10s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "title": "Request Rate (by endpoint)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [{ "expr": "sum by (endpoint) (rate(infon_api_requests_total[5m]))", "legendFormat": "{{endpoint}}" }],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 2,
      "title": "Request Rate (by status)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [{ "expr": "sum by (status) (rate(infon_api_requests_total[5m]))", "legendFormat": "{{status}}" }],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 3,
      "title": "Error Rate (4xx + 5xx)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        { "expr": "sum(rate(infon_api_requests_total{status=~\"4..\"}[5m]))", "legendFormat": "4xx" },
        { "expr": "sum(rate(infon_api_requests_total{status=~\"5..\"}[5m]))", "legendFormat": "5xx" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 4,
      "title": "Request Duration p50 / p95 / p99 (by endpoint)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        { "expr": "histogram_quantile(0.50, sum by (endpoint, le) (rate(infon_api_request_duration_seconds_bucket[5m])))", "legendFormat": "p50 {{endpoint}}" },
        { "expr": "histogram_quantile(0.95, sum by (endpoint, le) (rate(infon_api_request_duration_seconds_bucket[5m])))", "legendFormat": "p95 {{endpoint}}" },
        { "expr": "histogram_quantile(0.99, sum by (endpoint, le) (rate(infon_api_request_duration_seconds_bucket[5m])))", "legendFormat": "p99 {{endpoint}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "id": 5,
      "title": "Top 10 Slowest Endpoints (p95)",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [{ "expr": "topk(10, histogram_quantile(0.95, sum by (endpoint, le) (rate(infon_api_request_duration_seconds_bucket[5m]))))", "legendFormat": "{{endpoint}}" }],
      "fieldConfig": { "defaults": { "unit": "s" } },
      "options": { "orientation": "horizontal", "displayMode": "gradient" }
    },
    {
      "id": 6,
      "title": "Request Volume (by method)",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [{ "expr": "sum by (method) (increase(infon_api_requests_total[1h]))", "legendFormat": "{{method}}" }]
    },
    {
      "id": 7,
      "title": "Total Requests (all time)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 24 },
      "targets": [{ "expr": "sum(infon_api_requests_total)", "legendFormat": "" }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [{ "color": "blue", "value": null }]
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Total Errors (all time)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 24 },
      "targets": [{ "expr": "sum(infon_api_requests_total{status=~\"5..\"})", "legendFormat": "" }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "id": 9,
      "title": "WebSocket Connections",
      "type": "timeseries",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 24 },
      "targets": [{ "expr": "infon_connected_websockets", "legendFormat": "connections" }]
    },
    {
      "id": 10,
      "title": "WebSocket Messages/s",
      "type": "timeseries",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 24 },
      "targets": [{ "expr": "rate(infon_websocket_messages_sent_total[5m])", "legendFormat": "msgs/s" }],
      "fieldConfig": { "defaults": { "unit": "ops" } }
    }
  ],
  "schemaVersion": 39
}
