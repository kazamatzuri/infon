{
  "uid": "infon-game-engine",
  "title": "Infon - Game Engine",
  "tags": ["infon"],
  "timezone": "browser",
  "refresh": "10s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "title": "Active Games",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 },
      "targets": [{ "expr": "infon_active_games", "legendFormat": "" }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "dark-blue", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Queue Depth",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 0 },
      "targets": [{ "expr": "infon_game_queue_depth", "legendFormat": "" }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 3 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "WebSocket Connections",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 0 },
      "targets": [{ "expr": "infon_connected_websockets", "legendFormat": "" }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Lua VMs Active",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
      "targets": [{ "expr": "infon_lua_vm_pool_active", "legendFormat": "" }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "purple", "value": null }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Bot Submissions",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 0 },
      "targets": [{ "expr": "infon_bot_submissions_total", "legendFormat": "" }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [{ "color": "blue", "value": null }]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Validation Failures",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 0 },
      "targets": [{ "expr": "infon_bot_validation_failures_total", "legendFormat": "" }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Games Started (by format)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 4 },
      "targets": [{ "expr": "rate(infon_games_started_total[5m])", "legendFormat": "{{format}}" }],
      "fieldConfig": { "defaults": { "unit": "ops" } }
    },
    {
      "id": 8,
      "title": "Games Completed (by format)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 4 },
      "targets": [{ "expr": "rate(infon_games_completed_total[5m])", "legendFormat": "{{format}}" }],
      "fieldConfig": { "defaults": { "unit": "ops" } }
    },
    {
      "id": 9,
      "title": "Games Errored (by format)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 4 },
      "targets": [{ "expr": "rate(infon_games_errored_total[5m])", "legendFormat": "{{format}}" }],
      "fieldConfig": { "defaults": { "unit": "ops" } }
    },
    {
      "id": 10,
      "title": "Game Duration Distribution",
      "type": "histogram",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [{ "expr": "infon_game_duration_seconds_bucket", "legendFormat": "{{format}}", "format": "heatmap" }],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "id": 11,
      "title": "Tick Duration (p50 / p95 / p99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        { "expr": "histogram_quantile(0.50, rate(infon_game_tick_duration_ms_bucket[5m]))", "legendFormat": "p50" },
        { "expr": "histogram_quantile(0.95, rate(infon_game_tick_duration_ms_bucket[5m]))", "legendFormat": "p95" },
        { "expr": "histogram_quantile(0.99, rate(infon_game_tick_duration_ms_bucket[5m]))", "legendFormat": "p99" }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } }
    },
    {
      "id": 12,
      "title": "Creatures Spawned (by type)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "targets": [{ "expr": "rate(infon_creatures_spawned_total[5m])", "legendFormat": "{{creature_type}}" }],
      "fieldConfig": { "defaults": { "unit": "ops" } }
    },
    {
      "id": 13,
      "title": "Creatures Killed (by type)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "targets": [{ "expr": "rate(infon_creatures_killed_total[5m])", "legendFormat": "{{creature_type}}" }],
      "fieldConfig": { "defaults": { "unit": "ops" } }
    },
    {
      "id": 14,
      "title": "WebSocket Messages Sent",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
      "targets": [{ "expr": "rate(infon_websocket_messages_sent_total[5m])", "legendFormat": "msgs/s" }],
      "fieldConfig": { "defaults": { "unit": "ops" } }
    }
  ],
  "schemaVersion": 39
}
